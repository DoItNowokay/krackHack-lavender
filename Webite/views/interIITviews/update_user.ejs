<%- include('Include/_header') %>
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/interIIT"
          ><i class="fas fa-angle-double-left"> </i>All Teams</a
        >
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark text-center">Update</h2>
      <span class="text-light">Use the below form to update</span>
    </div>

    <form method="POST" id="update_user">
      <div class="new_user">
        <div class="form-group">
          <label for="Edition" class="text-light">Edition</label>
          <input type="hidden" name="id" value="<%" ="user._id%" />>
          <input type="number" name="edition" value="<%" ="user.edition%" />
          placeholder="">
        </div>
        <div class="form-group">
          <label for="Medal" class="text-light">Medal</label>
          <input type="text" name="medal" value="<%" ="user.medal%" />
          placeholder="">
        </div>
        <div class="form-group">
          <label for="PS" class="text-light">Problem Statement</label>
          <input type="text" name="ps" value="<%" ="user.ps%" /> placeholder="">
        </div>
        <div class="form-group">
          <label for="Team" class="text-light">Team</label>
          <input type="text" name="team" value="<%" ="user.team%" />
          placeholder="">
        </div>
        <div class="form-group">
          <label for="Team" class="text-light">UserType</label>
          <input type="text" name="team" value="<%" ="user.usertype%" />
          placeholder="">
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
  </div>
</main>

<%- include('Include/_footer')%>
